package ejercicioscondicionales;
//2.- Escribe un programa que pregunte el precio de un producto. Si vale mÃ¡s de 80 â‚¬, le harÃ¡ un
//descuento del 10%. Se mostrarÃ¡ en pantalla el precio final.
import java.util.Scanner;
public class ejercicio02 {

	public static void main(String[] args) {
 Scanner entrada= new Scanner(System.in);
 
 System.out.println("Precio del producto: ");
		float precio = entrada.nextFloat();
		
	
		
		if (precio >80) {	float precioRebajado = precio- precio*10/100;
			
		} 
		System.out.println("Éste sera su precio con un 10% : " + precioRebajado);
		
		
	}

}
